	TIM3->CNT =0;// clear counter
	TIM3->CR1 |=(1<<0);//start timer
	while(!(TIM3->SR & (1<<0)));//stay in loop till overflow occurs,till flag set
	TIM3->SR &=~(1<<0);
	TIM3->CR1 &=~(1<<0);//STOP TIMER AFTER OVERFLOW
}*/

